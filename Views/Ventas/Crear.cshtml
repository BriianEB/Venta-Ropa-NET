@model VentaViewModel
@{
    ViewData["Title"] = "Nueva Venta";
}

<div class="form-container">
    <h2>Agregar nueva venta</h2>
    <form asp-controller="Ventas" asp-action="Crear" method="post">
        <div class="form-group">
            <label asp-for="Producto"></label>
            <select class="form-control" asp-for="Producto" asp-items="Model.Productos"></select>
            <span asp-validation-for="Producto"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cantidad"></label>
            <input class="form-control" asp-for="Cantidad">
            <span asp-validation-for="Cantidad"></span>
        </div>
        <div class="button-container">
            <button type="submit" class="boton" name="guardar">Guardar</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial">
}
