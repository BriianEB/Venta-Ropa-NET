@model ProductoModel

@{
    ViewData["Title"] = "Agregar producto";
}

<div class="form-container">
    <h2>Agregar nuevo producto</h2>
    <form asp-controller="Productos" asp-action="Crear" method="post">
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input class="form-control" asp-for="Nombre">
            <span asp-validation-for="Nombre"></span>
        </div>
        <div class="form-group">
            <label asp-for="Precio"></label>
            <input class="form-control" asp-for="Precio">
            <span asp-validation-for="Precio"></span>
        </div>
        <div class="button-container">
            <button type="submit" class="boton" name="guardar">Guardar</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial">
}
